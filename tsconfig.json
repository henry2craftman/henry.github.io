{
	"compilerOptions": {
		"experimentalDecorators": true,
    "useDefineForClassFields": false,
    "baseUrl": "src",
		// Add type definitions for our Vite runtime.
	  "types": ["astro/client"],
    "paths": {
      "@config": ["src/config/*"],
      "@icons": ["src/icons/*"],
      "@lib/*": ["src/lib/*"],
      "@utils/*": ["src/utils/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@assets/*": ["src/assets/*"],
      "@pages/*": ["src/pages/*"],
      "@styles/*": ["src/styles/*"]
    }
	}
}
